@model SupplierWebApp.Models.Quotation

@{
    ViewData["Title"] = "Edit Quotation";
}

<h2>Edit Quotation</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <input type="hidden" asp-for="SupplierId" />
        <label asp-for="SupplierId" class="form-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Product" class="form-label"></label>
        <input asp-for="Product" class="form-control" />
        <span asp-validation-for="Product" class="text-danger"></span>
    </div>
   

    <div class="mb-3">
        <label asp-for="CostPerUnit" class="form-label"></label>
        <input asp-for="CostPerUnit" class="form-control"  />
        <span asp-validation-for="CostPerUnit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


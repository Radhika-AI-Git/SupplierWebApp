@model SupplierWebApp.Models.Quotation



@{
    ViewData["Title"] = "Delete Quotation";
}

<h2>Delete Quotation</h2>

<h4>Are you sure you want to delete this quotation?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">SupplierId</dt>
        <dd class="col-sm-10">@Model.SupplierId</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product</dd>

        <dt class="col-sm-2">Cost Per Unit</dt>
        <dd class="col-sm-10">@Model.CostPerUnit</dd>
     
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
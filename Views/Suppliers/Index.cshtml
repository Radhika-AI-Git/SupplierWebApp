@model IEnumerable<SupplierWebApp.Models.Supplier>



@{
    ViewData["Title"] = "Suppliers List";
}

<h2>Suppliers</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Supplier</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Country Code</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.Email</td>
                <td>@supplier.CountryCode</td>
                <td>@supplier.DateCreated.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
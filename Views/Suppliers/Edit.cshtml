@model SupplierWebApp.Models.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Edit Supplier";
}

<h2>Edit Supplier</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Supplier.Id" />

    <div class="mb-3">
        <label asp-for="Supplier.Name" class="form-label"></label>
        <input asp-for="Supplier.Name" class="form-control" />
        <span asp-validation-for="Supplier.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Supplier.Email" class="form-label"></label>
        <input asp-for="Supplier.Email" class="form-control" />
        <span asp-validation-for="Supplier.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Supplier.CountryCode" class="form-label"></label>
        <select asp-for="Supplier.CountryCode" asp-items="Model.CountryList" class="form-select">
            <option value="">-- Select Country --</option>
        </select>
        <span asp-validation-for="Supplier.CountryCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Supplier.DateCreated" class="form-label"></label>
        <input asp-for="Supplier.DateCreated" class="form-control" type="date" />
        <span asp-validation-for="Supplier.DateCreated" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

